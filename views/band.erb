<div class="row">
  <div class="col-md-6 col-offset-md-3">
    <h3><%= @band.name %>
      <br>
      <br>
      <div class="button-bar">

        <!-- change the band's name -->
        <% unless @edit == true %>
          <form action="/bands/<%=@band.id%>/edit" method="post">
            <button type="submit" id="change_name" class="btn btn-info btn-xs">
              New band name <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
          </form>
        <% else %>
          <form class="form-inline" action="/bands/<%=@band.id%>" method="post">
            <input name="_method" type="hidden" value="patch">
            <button type="submit" id="change_name" class="btn btn-info btn-xs">
              Change name <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <input type="text" name="new_name" class="form-control" placeholder="choose a new name">
          </form>
        <% end %>

        <!-- remove the band -->
        <form action="/bands/<%=@band.id%>" method="post">
          <input name="_method" type="hidden" value="delete">
          <button type="submit" id="add_venue" class="btn btn-danger btn-xs">
            Remove band <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </button>
        </form>


      </div>

    </h3>
    <hr>

    <% if @band.venues.any? %>
      <ul class="list-unstyled">
        <% @band.venues.each do |venue| %>
          <li class="float-left"><a href="/venues/<%=venue.id%>"> <%= venue.name %> </a></li>
        <% end %>
      </ul>
    <% else %>
      <h6>None yet</h6>
    <% end %>

    <form class="vert-margin" action="/bands/<%=@band.id%>/venues" method="post">
      <input name="_method" type="hidden" value="patch">
      <hr>
      <h4>Unplayed Venues:</h4>
        <% @band.unplayed_venues.each do |venue| %>
          <div class="form-group">
            <input type="checkbox" name="<%= venue.id %>" value="<%= venue.id %>"><%= venue.name %>
          </div>
        <% end %>
      <button type="submit" id="add_band" class="btn btn-default btn-xs">
        Add venues <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>
  </div>

</div>
