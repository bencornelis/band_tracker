<div class="row">
  <div class="col-md-6 col-offset-md-3">
    <h3><%= @venue.name %>
      <br>
      <br>
      <div class="button-bar">

        <!-- change the venue's name -->
        <% unless @edit == true %>
          <form action="/venues/<%=@venue.id%>/edit" method="post">
            <button type="submit" id="change_name" class="btn btn-info btn-xs">
              New venue name <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
          </form>
        <% else %>
          <form class="form-inline" action="/venues/<%=@venue.id%>" method="post">
            <input name="_method" type="hidden" value="patch">
            <button type="submit" id="change_name" class="btn btn-info btn-xs">
              Change name<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <input type="text" name="new_name" class="form-control" placeholder="choose a new name">
          </form>
        <% end %>

        <!-- remove the venue -->
        <form action="/venues/<%=@venue.id%>" method="post">
          <input name="_method" type="hidden" value="delete">
          <button type="submit" id="add_venue" class="btn btn-danger btn-xs">
            Remove venue <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </button>
        </form>


      </div>

    </h3>
    <hr>

    <h4>Hosted bands:</h4>
    <hr>
    <% if @venue.bands.any? %>
      <ul class="list-unstyled">
        <% @venue.bands.each do |band| %>
          <li class="float-left"><a href="/bands/<%=band.id%>"> <%= band.name %> </a></li>
        <% end %>
      </ul>
    <% else %>
      <h6>None yet</h6>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-offset-md-3">

    <% if @venue.unhosted_bands.any? %>
      <form class="vert-margin" action="/venues/<%=@venue.id%>/bands" method="post">
        <input name="_method" type="hidden" value="patch">
          <hr>
          <h4>Unhosted bands:</h4>
          <% @venue.unhosted_bands.each do |band| %>
            <div class="form-group">
              <input type="checkbox" name="<%= band.id %>" value="<%= band.id %>"><%= band.name %>
            </div>
          <% end %>
        <button type="submit" id="add_band" class="btn btn-default btn-xs">
          Add bands <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
      </form>
    <% else %>
      <hr>
      <h4>Unhosted bands:</h4>
      <h6>None left!</h6>
    <% end %>
  </div>
</div>
