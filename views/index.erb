<div class="row">
  <div class="col-md-6 col-offset-md-3">
    <h3>Bands</h3>
    <hr>
    <% if @bands.any? %>
      <ul class="list-unstyled">
        <% @bands.each do |band| %>
          <li class="float-left"><a href="/bands/<%=band.id%>"> <%= band.name %> </a></li>
        <% end %>
      </ul>
    <% else %>
      <h6>None yet</h6>
    <% end %>
  </div>
  <div class="col-md-3 col-offset-md-1">
    <form action="/bands/new" method="post">
      <div class="form-group">
        <input type="text" name="band_name" class="form-control" placeholder="band name">
      </div>
      <div class="form-group">
        <input type="text" name="origin" class="form-control" placeholder="origin city">
      </div>
      <div class="form-group">
        <input type="text" name="year_founded" class="form-control" placeholder="year founded">
      </div>
      <button type="submit" id="add_band" class="btn btn-success">
        Add band &nbsp<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>
  </div>
</div>
<hr>

<div class="row vert-margin">
  <div class="col-md-6 col-offset-md-3">
    <h3>Venues</h3>
    <hr>
    <% if @venues.any? %>
      <ul class="list-unstyled">
        <% @venues.each do |venue| %>
          <li class="float-left"><a href="/venues/<%=venue.id%>"> <%= venue.name %> </a></li>
        <% end %>
      </ul>
    <% else %>
      <h6>None yet</h6>
    <% end %>
  </div>
  <div class="col-md-3 col-offset-md-1">
    <form action="/venues/new" method="post">
      <div class="form-group">
        <input type="text" name="venue_name" class="form-control" placeholder="venue name">
      </div>
      <div class="form-group">
        <input type="text" name="location" class="form-control" placeholder="location">
      </div>
      <button type="submit" id="add_venue" class="btn btn-success">
        Add venue &nbsp<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>
  </div>
</div>
<hr>

<div class="col-md-6 col-offset-md-3">
  <!-- find best venue for a musical genre -->
  <form class="form-inline" action="/venue/search">
    <h4>Which venue is best for
      <input type="text" name="search_genre" class="form-control input-sm" placeholder="some genre of"> music?
      &nbsp&nbsp<button type="submit" class="btn btn-info btn-sm">Find out!</button>
    </h4>
  </form>
  <% unless @best_venue == nil %>
    <h5 class="text-success">The best venue for <%= @genre_name %> music is <%= @best_venue.name %>.</h5>
  <% end %>
</div>
